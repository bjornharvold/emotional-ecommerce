<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<!-- Definitions for Tiles documentation   -->

<tiles-definitions>

    <definition name="stores.index" extends="template.page.master">

        <put-list-attribute name="styles" inherit="true">
            <add-attribute type="string" value="/static/styles/common/list.css" />
            <add-attribute type="string" value="/static/styles/stores/stores.css" />
        </put-list-attribute>

        <put-list-attribute name="javascripts" inherit="true">
            <add-attribute type="string" value="/static/js/plugins/jquery.tooltips.min.js" />
            <add-attribute type="string" value="/static/js/plugins/jquery.form.js" />
            <add-attribute type="string" value="/static/js/plugins/raty/jquery.raty.js" />
            <add-attribute type="string" value="/static/js/common/list.js" />
            <add-attribute type="string" value="/static/js/stores/stores.js" />
        </put-list-attribute>

        <put-list-attribute name="contents">
            <add-attribute type="template" value="/WEB-INF/jsp/common/facebook_api.jspx" />
            <add-attribute type="template" value="/WEB-INF/jsp/stores/stores.jspx" />
        </put-list-attribute>

    </definition>

    <definition name="store.deals" extends="template.simple.master">

        <put-attribute type="string" name="title" value="stores.on.lela.title" />

        <put-list-attribute name="styles" inherit="true">
            <add-attribute type="string" value="/static/styles/common/list.css" />
            <add-attribute type="string" value="/static/styles/stores/stores.css" />
        </put-list-attribute>

        <put-list-attribute name="javascripts" inherit="true">
            <add-attribute type="string" value="/static/js/plugins/jquery.tooltips.min.js" />
            <add-attribute type="string" value="/static/js/plugins/jquery.form.js" />
            <add-attribute type="string" value="/static/js/plugins/raty/jquery.raty.js" />
            <add-attribute type="string" value="/static/js/common/list.js" />
            <add-attribute type="string" value="/static/js/stores/stores.js" />
        </put-list-attribute>

        <put-list-attribute name="contents">
            <add-attribute type="template" value="/WEB-INF/jsp/common/facebook_api.jspx" />
            <add-attribute type="template" value="/WEB-INF/jsp/stores/deals.jspx" />
        </put-list-attribute>

    </definition>

    <definition name="local.stores.index" extends="template.page.master">

        <put-attribute type="string" name="title" value="local.stores.on.lela.title" />

        <put-list-attribute name="styles" inherit="true">
            <add-attribute type="string" value="/static/styles/stores/stores.css" />
            <add-attribute type="string" value="/static/styles/common/list.css" />
        </put-list-attribute>

        <put-list-attribute name="javascripts" inherit="true">
            <add-attribute type="string" value="/static/js/plugins/jquery.tooltips.min.js" />
            <add-attribute type="string" value="/static/js/plugins/jquery.form.js" />
            <add-attribute type="string" value="/static/js/plugins/raty/jquery.raty.js" />
            <add-attribute type="string" value="/static/js/common/list.js" />
            <add-attribute type="string" value="/static/js/stores/stores.js" />
            <add-attribute type="string" value="/static/js/items/details.js" />
        </put-list-attribute>

        <put-list-attribute name="contents">
            <add-attribute type="template" value="/WEB-INF/jsp/common/facebook_api.jspx" />
            <add-attribute type="template" value="/WEB-INF/jsp/stores/local.jspx" />
        </put-list-attribute>

    </definition>

</tiles-definitions>
