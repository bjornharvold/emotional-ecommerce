<tiles-definitions>

    <definition name="quiz.waiting.mobile" extends="template.mobile.master">
        <put-attribute type="string" name="title" value="page.quiz.name" />
        <put-attribute type="string" name="description" value="meta.description.home" />
        <put-attribute type="string" name="keywords" value="meta.keywords.home" />
        <put-list-attribute name="styles" inherit="true">
            <add-attribute type="string" value="/static/styles/quiz/lela_quiz.css" />
            <add-attribute type="string" value="/static/mobile/styles/quiz.css" />
            <add-attribute type="string" value="/static/mobile/styles/quiz_waiting.css" />
        </put-list-attribute>
        <put-list-attribute name="javascripts" inherit="true">
            <add-attribute type="string" value="/static/js/plugins/jquery.blockUI.js" />
            <add-attribute type="string" value="/static/js/plugins/jquery.cookie.js" />
            <add-attribute type="string" value="/static/js/plugins/jquery.listenForChange.js" />
            <add-attribute type="string" value="/static/js/quiz/quiz_waiting.js" />
            <add-attribute type="string" value="/static/js/user/tasks.js" />
        </put-list-attribute>
        <put-list-attribute name="contents">
            <add-attribute type="template" value="/WEB-INF/jsp/user/task_alerts.jspx" />
            <add-attribute type="template" value="/WEB-INF/jsp/quiz/mobile/quiz_waiting.jspx" />
        </put-list-attribute>
    </definition>

